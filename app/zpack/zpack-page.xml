                                                    <Label text="{{ package_nama }}" class="package-nama" textWrap="true" />
                                                    <Label text="{{ package_status }}" class="package-status" textWrap="true" />
                                                </StackLayout>
                                            </GridLayout>
                                        </ListView.itemTemplate>
                                    </ListView>
                                </PullRefresh:PullToRefresh>
                            </StackLayout>
                        </TabViewItem>
                    </TabView>
                </StackLayout>
            </StackLayout>
        </GridLayout>
    </ScrollView>
</Page>