                                                </StackLayout>
                                            </GridLayout>
                                        </ListView.itemTemplate>
                                    </ListView>
                                </PullRefresh:PullToRefresh>
                            </StackLayout>
                        </TabViewItem>
                    </TabView>
                </StackLayout>
                <StackLayout visibility="{{ urole == 'customer' ? 'visible' : 'collapsed' }}" >
