<Page 
    loaded="onLoaded" 
    navigatingTo="onNavigatingTo" 
    class="page" actionBarHidden="true" backgroundSpanUnderStatusBar="false" xmlns="http://www.nativescript.org/tns.xsd">

    <FlexboxLayout class="page">
        <StackLayout class="form">
            <Label class="header" text="Forgot Password" />

            <GridLayout rows="auto, auto, auto">
                <StackLayout row="0" class="input-field">
                    <TextField class="input" text="{{ email }}" hint="Email" keyboardType="email" autocorrect="false" autocapitalizationType="none" returnKeyType="next" />
                    <Label class="hr-light" />
                </StackLayout>
            </GridLayout>

            <Button text="Submit" class="btn btn-primary m-t-20" tap="submit" />
            <Label text="Already have account? Sign In Here" class="login-label" tap="signin" />
            <Label text="Sign up for New Customer" class="login-label m-t-10" tap="signup" />
        </StackLayout>
    </FlexboxLayout>
</Page>