<Page loaded="onLoaded" actionBarHidden="true" backgroundSpanUnderStatusBar="false" xmlns="http://www.nativescript.org/tns.xsd">
    <BottomNavigation selectedIndex="{{ tabSelected }}">
        <TabStrip>
            <TabStripItem>
                <Label text="Package" />
                <Image src="font://&#xf1c0;" class="fa t-36" />
            </TabStripItem>
            <TabStripItem>
                <Label text="Account" />
                <Image src="font://&#xf2bd;" class="fa t-36" />
            </TabStripItem>
            <TabStripItem tap="logout">
                <Label text="Logout" color="red" />
                <Image src="font://&#xf011;" class="fa t-36" color="red" />
            </TabStripItem>
        </TabStrip>

        <TabContentItem> 
            <Frame defaultPage="zpack/zpack-page" />
        </TabContentItem>

        <TabContentItem>
            <Frame defaultPage="account/account-page" />
        </TabContentItem>
    </BottomNavigation>
</Page>